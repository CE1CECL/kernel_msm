/*
 * msm8909-swordfish-rsb: rotating side button config
 */

&spi_0  {
	pinctrl-names = "spi_default", "spi_sleep";
	pinctrl-0 = <&spi0_default>;
	pinctrl-1 = <&spi0_sleep>;
	rsb: rsb@0 {
		compatible = "rsb";
		reg = <0>;
		interrupt-parent = <&msm_gpio>;
		interrupts = <95 0x00>;
		spi-max-frequency = <2000000>;

		rsb,spi-cs-gpio = <&msm_gpio 10 0x00>;
		rsb,motion-gpio = <&msm_gpio 95 0x00>;

		pinctrl-names = "default";
		pinctrl-0 = <&spi0_cs0_active &rsb_motion_gpio>;
	};
};
